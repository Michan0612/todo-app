.container
  %ul
    - task.errors.full_messages.each do |message|
      %li= message
  = form_with(model: task, url: board_task_path(task), method: 'put', local: true) do |f|
    %div.title_label
      = f.label :title, 'Name'
    %div
      = f.text_field :title, class: 'text'
    %div.title_label
      = f.label :content, 'Description'
    %div
      = f.text_area :content
    = f.submit 'Submit', class: 'submit_btn'
