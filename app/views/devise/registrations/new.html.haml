.container
  %p.header_text Boads
  .border_room
  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :email, class: 'text'
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'input_room'
    .field
      = f.label :password, class: 'text'
    
      %br/
      = f.password_field :password, autocomplete: "new-password", class: 'input_room'
    .field
      = f.label :password_confirmation, class: 'text'
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: 'input_room'
    .actions2
      = f.submit "Submit", class: 'submit_btn'

